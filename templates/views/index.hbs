<!DOCTYPE html>
<html lang="en">

<head>
      {{>head}}
</head>

<body>
      {{>navbar}}

      <!-- header section -->

      <div class="container-fluid">
            <div class="row">
                  <!-- left side -->
                  <div class="col-md-7 col-12 left">
                        <p>Welcome to Weather App</p>
                        <h1>Get the latest <span class="txt_color">weather</span> Information of your city üòç</h1>
                        <a href="/weather"><button>Check Now</button></a>
                  </div>
                  <!-- right side -->
                  <div class="col-md-5 col-12 right">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                              <div class="carousel-inner">
                                    <div class="carousel-item active">
                                          <img src="images/bg1.png" class="d-block w-100" alt="Images">
                                    </div>
                                    <div class="carousel-item">
                                          <img src="images/bg2.png" class="d-block w-100" alt="Images">
                                    </div>
                                    <div class="carousel-item">
                                          <img src="images/bg3.png" class="d-block w-100" alt="Images">
                                    </div>
                                    <div class="carousel-item">
                                          <img src="images/bg4.png" class="d-block w-100" alt="Images">
                                    </div>
                              </div>
                              <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                    data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                              </a>
                              <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                    data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                              </a>
                        </div>
                  </div>
            </div>

      </div>
      <!-- footer creation -->

      {{>footer}}

</body>

</html>